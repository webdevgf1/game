{
  "version": 2,
  "builds": [
    { "src": "public/**/*", "use": "@vercel/static" },
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "*.html", "use": "@vercel/static" }
  ],
  "routes": [
    { 
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "/(maps|sprites|tilesets)/(.*)",
      "dest": "/public/$1/$2"
    },
    {
      "src": "/docs",
      "dest": "/docs.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
